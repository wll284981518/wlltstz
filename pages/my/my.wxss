/* pages/my/my.wxss */
/* 我的页面 */
/* 头部 */
.wll_header image{
  width: 176rpx;
  height: 157rpx;
  display: block;
  margin: 0 auto;
}

/* 余额开始 */
.wll_header .wll_ul{
  display: flex;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  padding: 20rpx 0rpx;
  margin-top: 48rpx;
}

.wll_header .wll_ul .wll_li{
  width: 33.33%;
  font-size: 22rpx;
  height: 70rpx;
  border-right: 1rpx solid #ccc;
  box-sizing: border-box;
}

.wll_header .wll_ul>.wll_li>text{
  display: block;
  text-align: center;
}

.wll_header .wll_button{
  width: 230rpx;
  height: 60rpx;
  line-height: 60rpx;
  border: 1px  solid #040404;
  background: none;
  padding: 0;
  display: block;
  margin: 0 auto;
  text-align: center;
  font-size: 28rpx;
  font-weight: 200;
  color:#040404;
}

/* 订单 */
.wll_ding{
  margin-top: 8rpx;
  background: #fff;
  width: 100%;
  height: 200rpx;
}

.wll_ding_one{
  height: 80rpx;
  padding: 0 20rpx;
  line-height: 80rpx;
  display: flex;
  border-bottom: 1px solid #eee;
  justify-content: space-between;
  align-items: center;
}

.wll_ding_one>image{
  width: 50rpx;
  height: 50rpx;
}

.wll_ding_two{
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  text-align: center;
}

.wll_ding_three{
  width: 20%;
}

.wll_ding_three>image{
  width: 50rpx;
  height: 50rpx;
}

.wll_ding_three>view{
  font-size: 24rpx;
}

/* 广告图片 */
.wll_content image{
  width: 100%;
  height: 240rpx;
}

/* 主要部分 */
.wll_dl{
  display: flex;
  height: 106rpx;
  line-height: 106rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  border-bottom: 1px solid #fcfcfc;

}


.wll_dl text:nth-child(1){
  width: 50%;
  font-size:30rpx;
}

.wll_dl text:nth-child(2){
  width: 50%;
  font-size:20rpx;
  text-align: right;
  color:#aaa;
}


.wll_dl text:nth-child(2).wll_bout{
  width: 200rpx;
  height: 76rpx;
  background: #19ab18;
  font-size:20rpx;
  margin-left: 140rpx;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 22rpx;
}

