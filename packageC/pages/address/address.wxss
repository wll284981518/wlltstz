/* pages/address/address.wxss */
/* 收货地址 */
.wll_address{
  width: 100%;
  height: 96%;
  background: #eee;
  padding: 20rpx 0 0 0;
  position: relative;
}

page{
  height: 100%;
}

/* 内容编辑 */
.wll_address_con{
  width: 100%;
  height: 100%;
  background: #fff;
}

.wll_address_con_one{
  display: flex;
  justify-content: space-between;
  width: 94%;
  height: 120rpx;
  align-items: center;
  border-bottom: 2px solid #eee;
  margin: 20rpx auto;
}

.wll_address_con_one>image{
  width: 60rpx;
  height: 60rpx;
}

.wll_address_con_two{
  line-height: 60rpx;
  width: 90%;
}

.wll_aa{
  display: flex;
}

.wll_bb{
   margin-right: 40rpx;
    width: 200rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.wll_address_con_two>view:nth-child(2){
  color: #ccc;
  font-size: 24rpx;
}

.wll_address_con_three{
  position: fixed;
  left: 0;
  bottom: 0;
  height: 80rpx;
  padding: 0 20rpx;
  width: 94%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.wll_address_con_three>view:nth-child(1){
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
  background: red;
  color: #fff;
}

.wll_address_con_three>image{
  width: 40rpx;
  height: 40rpx;
}

/* 固定导航 */
.wll_zi_bottom{
  position: fixed;
  right: 0;
  bottom: 400rpx;
  width: 120rpx;
  height: 80rpx;
  border-radius: 6px 0 0 6px;
  background: #000;
  color: #fff;
  display: flex;
  align-items: center;
  z-index: 3;
}

.wll_zi_bottom>image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
  margin-left: 8rpx;
}

.wll_zi_bottom>view{
  width: 60rpx;
  height: 60rpx;
  font-size: 24rpx;
  text-align: center;
}

/* 出来的那个导航 */
.wll_zi_bottom_one{
  position:fixed;
  bottom: 160rpx;
  right: 0;
  width: 80%;
  height: 80rpx;
  /* border: 1px solid #000; */
  display: flex;
}

.wll_zi_bottom_one_nav{
  width: 120rpx;
  height: 80rpx;
  border-radius: 6px 0 0 6px;
  background: #000;
  color: #fff;
  display: flex;
  align-items: center;
}

.wll_zi_bottom_one_nav>image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
  margin-left: 8rpx;
}

.wll_zi_bottom_one_nav>text{
  width: 60rpx;
  height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  display: block;
}

.wll_zi_bottom_two{
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
}

.wll_zi_bottom_two_dd{
  width: 25%;
  text-align: center;
}

.wll_zi_bottom_two_dd>image{
  width: 40rpx;
  height: 40rpx;
}

.wll_zi_bottom_two_dd>text{
  display: block;
  font-size: 12px;
}
