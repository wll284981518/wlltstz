  display: none;  
}  

.wll_details_shop{
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .5);
}

.wll_details_shop_one{
  position: absolute;
  left: 0;
  bottom: 0;
  background: #fff;
  height: 60%;
  width: 100%;
  /* padding: 0 10px; */
}

.wll_details_shop_one_head{
  height: 20%;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  padding-left: 36rpx;
}

.wll_details_shop_one_head>image{
  width: 100rpx;
  height: 100rpx;
}

.wll_details_shop_one_right{
  width: 420rpx;
  font-size: 20rpx;
  margin-left: 40rpx;
  line-height: 40rpx;
}

.wll_details_shop_one_right>view:nth-child(2){
  color: red;
}

.wll_details_shop_two{
  height: 20%;
  line-height: 50rpx;
  font-size: 20rpx;
  padding-left: 36rpx;
}

.wll_details_shop_two>view:nth-child(2)>text{
  height: 68rpx;
  border: 1px solid #d5d5d5;
  border-radius: 10rpx;
  margin-right: 20rpx;
  padding: 0 10rpx;
  text-align: center;
  line-height: 68rpx;
}

.wll_details_shop_three{
  border-bottom: 1px solid #eee;
  padding-bottom: 12rpx;
  padding-left: 36rpx;
}

.wll_details_shop_four{
  width: 90%;
  height: 20%;
  font-size: 20rpx;
  line-height: 120rpx;
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  /* padding: 0 36rpx 0 36rpx; */
}

.wll_details_shop_five{
  display: flex;
  align-items: center;
}

.wll_details_shop_five>text{
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #fff;
  text-align: center;
  border: 1px solid #eee;
}

.wll_details_jian{
  background: #eee;
}

.wll_details_shop_five>input{
  width: 60rpx;
  height: 60rpx;
  border: 1px solid #eee;
  text-align: center;
}

.wll_details_shop_six{
  width: 100%;
  height: 20%;
  /* min-height: 40px; */
  background: red;
  color: #fff;
  /* text-align: center; */
  display: flex;
  justify-content: center;
  align-items: center;
}

.wll_details_shop_seven{
  position: absolute;
  top: 42%;
  right: 4%;
}

.wll_details_shop_two>view:nth-child(2)>.active{
  border: 1px solid red;
  z-index: 1;
  color: red;
}

/* 当前的砍价价格购买 */
.wll_details_dd{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
