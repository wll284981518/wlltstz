/* packageA/pages/order/order.wxss */
/* 整体订单页面 */
page{
  height: 100%;
}

.wll_order{
  width: 100%;
  background-color: #F2f2f2;
}

.wll_order_status-box{
  width:100%;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
}

.wll_order_status-box .wll_order_status-label{
  width: 150rpx;
  height: 100%;
  text-align: center;
  font-size:28rpx;
  color:#353535;
  box-sizing: border-box;
  position: relative;
}

.wll_order_status-box .wll_order_status-label.active{
  color:#e64340;
  border-bottom: 6rpx solid #e64340;
}

.wll_order_no-order{
  width: 100%;
  position: absolute;
  bottom: 0;
  top: 88rpx;
  left: 0;
  right: 0;
  text-align: center;
  padding-top: 203rpx;
  background-color: #F2f2f2;
}

.wll_order_no-order-img{
  width: 81rpx;
  height: 96rpx;
  margin-bottom: 31rpx;
}

.wll_order_no-order .wll_order_text{
  font-size:28rpx;
  color:#999999;
  text-align: center
}

.wll_order_order-list{
  width: 100%;
}

.wll_order_order-list .wll_order_a-order{
  width: 100%;
  background-color: #fff;
  margin-top: 20rpx;
}

.wll_order_a-order .wll_order_dingDan_list_top{
  /* width: 100%; */
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 40rpx 0 40rpx;
  color: #353535;
}

.wll_order_dingDan_list_top .wll_view{
  display: flex;
  color: #ccc;
}

.wll_order_dingDan_list_top .wll_view view{
  margin-right: 16rpx;
}

.wll_order_a-order .wll_order_dingDan_list_top image{
  width: 30rpx;
  height: 40rpx;
}

.wll_order_a-order  .wll_order_goods-info,
.wll_order_goods-img-container{
  width: 720rpx;
  margin-left: 30rpx;
  border-top: 1rpx solid #eee;
  padding: 30rpx 0;
  display: flex;
  align-items: center;
}

.wll_order_goods-price {
  font-size:26rpx;
  width:720rpx;
  text-align: right;
  margin-bottom:30rpx;
}

.wll_order_goods-price .wll_order_p{
  font-size:36rpx;
  color:#e64340;
}

.wll_order_goods-info .wll_order_img-box{
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  margin-right: 30rpx;
  background-color: #f7f7f7;
}

.wll_order_goods-info .wll_order_img-box .wll_order_goods-img,
.wll_order_goods-img-container .wll_order_img-box .wll_order_goods-img{
  width: 120rpx;
  height: 120rpx;
}

.wll_order_goods-info  .wll_order_goods-des{
  font-size:26rpx;
  color:#000000;
}

.wll_order_goods-img-container{
  height: 180rpx;
  box-sizing: border-box;
  white-space: nowrap;
}

.wll_order_goods-img-container .wll_order_img-box{
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  margin-right: 20rpx;
  background-color: #f7f7f7;
  display: inline-block;
}

.wll_order_price-box{
  width: 720rpx;
  display: flex;
  flex-direction:row-reverse;
  padding-bottom: 30rpx;
}

.wll_order_price-box .wll_order_btn{
  width: 166rpx;
  height: 60rpx;
  box-sizing: border-box;
  text-align: center;
  line-height: 60rpx;
  border: 1rpx solid #ccc;
  border-radius: 6rpx;
  margin-left: 20rpx;
  font-size:26rpx;
}

.wll_order_price-box .active{
  border:1px solid #e64340;
  color: #e64340;
}

.wll_order_remark {
  color:#e64340;
  margin-bottom: 20rpx;
}

/* 固定导航 */
.wll_zi_bottom{
  position: fixed;
  right: 0;
  bottom: 400rpx;
  width: 120rpx;
  height: 80rpx;
  border-radius: 6px 0 0 6px;
  background: #000;
  color: #fff;
  display: flex;
  align-items: center;
  z-index: 3;
}

.wll_zi_bottom>image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
  margin-left: 8rpx;
}

.wll_zi_bottom>view{
  width: 60rpx;
  height: 60rpx;
  font-size: 24rpx;
  text-align: center;
}

/* 出来的那个导航 */
.wll_zi_bottom_one{
  position:fixed;
  bottom: 160rpx;
  right: 0;
  width: 80%;
  height: 80rpx;
  /* border: 1px solid #000; */
  display: flex;
}

.wll_zi_bottom_one_nav{
  width: 120rpx;
  height: 80rpx;
  border-radius: 6px 0 0 6px;
  background: #000;
  color: #fff;
  display: flex;
  align-items: center;
}

.wll_zi_bottom_one_nav>image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 8rpx;
  margin-left: 8rpx;
}

.wll_zi_bottom_one_nav>text{
  width: 60rpx;
  height: 60rpx;
  font-size: 24rpx;
  text-align: center;
  display: block;
}

.wll_zi_bottom_two{
  width: 100%;
  height: 80rpx;
  display: flex;
  background: #ffffff;
  justify-content: space-around;
}

.wll_zi_bottom_two_dd{
  width: 25%;
  text-align: center;
}

.wll_zi_bottom_two_dd>image{
  width: 40rpx;
  height: 40rpx;
}

.wll_zi_bottom_two_dd>text{
  display: block;
  font-size: 12px;
}
